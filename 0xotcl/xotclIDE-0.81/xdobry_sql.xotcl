    $inst prompt
    if {[$inst set userAction] ne "cancel" && [$inst set userAction] ne ""} {
        $inst setConnectionToDB
    } else {
        return 
    }
    set conn [$inst connectionObject]
    if {$conn eq "" || ![$conn isConnected]} {
        set msg empty
        if {$conn ne ""} {
            set msg [$conn errorMessage]
        }
